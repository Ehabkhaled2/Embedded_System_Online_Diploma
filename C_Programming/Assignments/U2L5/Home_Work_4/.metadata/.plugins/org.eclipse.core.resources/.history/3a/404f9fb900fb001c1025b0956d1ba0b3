#include <stdio.h>
#include <stdlib.h>

void reverse(char sentence[])
{
	reverse(sentence+1);
}

int main(void) {
	char word[100];
	int size;
	printf("E");
	printf("z");
	fflush(stdin); fflush(stdout);
	gets(word);
	size= strlen(word);
	reverse(word);
}
